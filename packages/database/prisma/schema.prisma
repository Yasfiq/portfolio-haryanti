generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  password  String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Admin {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String   @default("Admin")
  createdAt DateTime @default(now())
}

model Profile {
  id               String       @id @default(uuid())
  title            String?      // Displayed in Footer (below site name)
  bio              String?      // Displayed in Footer (short excerpt)
  email            String       // Contact email
  resumeUrl        String?      // Resume PDF for download
  linkedinUrl      String?
  instagramUrl     String?
  pinterestUrl     String?
  updatedAt        DateTime     @updatedAt
  educations       Education[]
}

model Education {
  id          String    @id @default(uuid())
  degree      String
  institution String
  startYear   Int
  endYear     Int?
  isCurrent   Boolean   @default(false)
  description String?
  order       Int       @default(0)
  profileId   String
  profile     Profile   @relation(fields: [profileId], references: [id])
}

// ===========================================
// CLIENT MODULE (Client > Category > Gallery)
// ===========================================

model Client {
  id           String           @id @default(uuid())
  name         String
  slug         String           @unique
  logoUrl      String?
  thumbnailUrl String?
  order        Int              @default(0)
  isVisible    Boolean          @default(true)
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
  categories   ClientCategory[]
}

model ClientCategory {
  id       String          @id @default(uuid())
  name     String
  slug     String
  clientId String
  order    Int             @default(0)
  client   Client          @relation(fields: [clientId], references: [id], onDelete: Cascade)
  images   CategoryImage[]

  @@unique([clientId, slug])
}

model CategoryImage {
  id         String         @id @default(uuid())
  url        String
  categoryId String
  order      Int            @default(0)
  createdAt  DateTime       @default(now())
  category   ClientCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)
}

// ===========================================
// OTHER MODULES
// ===========================================

model Experience {
  id              String    @id @default(uuid())
  company         String
  role            String
  startDate       DateTime
  endDate         DateTime?
  isCurrent       Boolean   @default(false)
  description     Json
  thumbnailUrl    String?
  logoUrl         String?
  order           Int       @default(0)
  backgroundColor String?
  isVisible       Boolean   @default(true)
}

model Skill {
  id           String        @id @default(uuid())
  name         String
  shortName    String?
  iconUrl      String?
  category     SkillCategory
  description  String?
  gradientFrom String?
  gradientTo   String?
  gradientVia  String?
  order        Int           @default(0)
}

model Service {
  id          String  @id @default(uuid())
  title       String
  description String
  iconUrl     String?
  order       Int     @default(0)
  isVisible   Boolean @default(false)
}

model Message {
  id        String   @id @default(uuid())
  name      String
  email     String
  content   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}

model HeroSlide {
  id              String  @id @default(uuid())
  title           String
  backgroundColor String?
  backgroundFrom  String?
  backgroundTo    String?
  order           Int     @default(0)
  isVisible       Boolean @default(true)
  schema          Json    @default("{}")
  template        String  @default("classic")
}

model SiteSettings {
  id             String   @id @default(uuid())
  siteName       String   @default("Haryanti")
  browserTitle   String?
  logoUrl        String?
  faviconUrl     String?
  primaryColor   String   @default("#FFD369")
  secondaryColor String   @default("#EEEEEE")
  footerText     String?
  ctaHeading     String?
  ctaDescription String?
  ctaButtonText  String?
  whatsappNumber String?
  updatedAt      DateTime @updatedAt
}

enum SkillCategory {
  HARD_SKILL
  SOFT_SKILL
}
