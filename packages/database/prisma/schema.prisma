generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Admin {
  id        String   @id @default(uuid())
  email     String   @unique
  createdAt DateTime @default(now())
}

model Profile {
  id           String      @id @default(uuid())
  fullName     String
  title        String
  bio          String
  avatarUrl    String?
  resumeUrl    String?
  email        String
  linkedinUrl  String?
  instagramUrl String?
  updatedAt    DateTime    @updatedAt
  pinterestUrl String?
  educations   Education[]
}

model Education {
  id         String    @id @default(uuid())
  schoolName String
  degree     String?
  startDate  DateTime
  endDate    DateTime?
  isCurrent  Boolean   @default(false)
  profileId  String
  profile    Profile   @relation(fields: [profileId], references: [id])
}

model Client {
  id          String    @id @default(uuid())
  name        String
  slug        String    @unique
  logoUrl     String?
  description String?
  order       Int       @default(0)
  isVisible   Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  projects    Project[]
}

model Project {
  id           String           @id @default(uuid())
  title        String
  slug         String           @unique
  projectDate  DateTime
  summary      String
  problem      String?
  solution     String?
  result       String?
  thumbnailUrl String
  videoUrl     String?
  likesCount   Int              @default(0)
  isVisible    Boolean          @default(false)
  order        Int              @default(0)
  categoryId   String?
  createdAt    DateTime         @default(now())
  clientId     String?
  category     ProjectCategory? @relation(fields: [categoryId], references: [id])
  client       Client?          @relation(fields: [clientId], references: [id])
  gallery      ProjectImage[]
  likes        ProjectLike[]
}

model ProjectImage {
  id        String  @id @default(uuid())
  url       String
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model ProjectLike {
  id         String   @id @default(uuid())
  projectId  String
  userIpHash String
  createdAt  DateTime @default(now())
  project    Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([projectId, userIpHash])
}

model Experience {
  id              String    @id @default(uuid())
  company         String
  role            String
  startDate       DateTime
  endDate         DateTime?
  isCurrent       Boolean   @default(false)
  description     Json
  thumbnailUrl    String?
  logoUrl         String?
  order           Int       @default(0)
  backgroundColor String?
  isVisible       Boolean   @default(true)
}

model Skill {
  id           String        @id @default(uuid())
  name         String
  shortName    String?
  iconUrl      String?
  category     SkillCategory
  description  String?
  gradientFrom String?
  gradientTo   String?
  gradientVia  String?
  order        Int           @default(0)
}

model Service {
  id          String  @id @default(uuid())
  title       String
  description String
  iconUrl     String?
  order       Int     @default(0)
}

model Message {
  id        String   @id @default(uuid())
  name      String
  email     String
  content   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}

model HeroSlide {
  id              String  @id @default(uuid())
  title           String
  backgroundColor String?
  backgroundFrom  String?
  backgroundTo    String?
  order           Int     @default(0)
  isVisible       Boolean @default(true)
  schema          Json    @default("{}")
  template        String  @default("classic")
}

model SiteSettings {
  id             String   @id @default(uuid())
  siteName       String   @default("Haryanti")
  logoUrl        String?
  faviconUrl     String?
  primaryColor   String   @default("#FFD369")
  secondaryColor String   @default("#EEEEEE")
  footerText     String?
  ctaHeading     String?
  ctaDescription String?
  ctaButtonText  String?
  updatedAt      DateTime @updatedAt
  heroTemplate   String   @default("slides")
  whatsappNumber String?
}

model ProjectCategory {
  id       String    @id @default(uuid())
  name     String    @unique
  slug     String    @unique
  order    Int       @default(0)
  projects Project[]
}

enum SkillCategory {
  HARD_SKILL
  SOFT_SKILL
}
