datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum SkillCategory {
  HARD_SKILL
  SOFT_SKILL
}

model Admin {
  id        String   @id @default(uuid())
  email     String   @unique
  createdAt DateTime @default(now())
}

model Profile {
  id           String      @id @default(uuid())
  fullName     String
  title        String
  bio          String      @db.Text
  avatarUrl    String?
  resumeUrl    String?
  email        String
  linkedinUrl  String?
  instagramUrl String?
  pinterestUrl String?
  educations   Education[]
  updatedAt    DateTime    @updatedAt
}

model Education {
  id         String    @id @default(uuid())
  schoolName String
  degree     String?
  startDate  DateTime
  endDate    DateTime?
  isCurrent  Boolean   @default(false)
  profileId  String
  profile    Profile   @relation(fields: [profileId], references: [id])
}

// Client/Workplace - Top level grouping for projects
model Client {
  id          String    @id @default(uuid())
  name        String
  slug        String    @unique
  logoUrl     String?
  description String?   @db.Text
  order       Int       @default(0)
  isVisible   Boolean   @default(true)
  projects    Project[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Project {
  id           String           @id @default(uuid())
  title        String
  slug         String           @unique
  // Removed: client as string - now using clientId relation
  projectDate  DateTime
  summary      String           @db.Text
  problem      String?          @db.Text  // To be removed in frontend, kept in DB for now
  solution     String?          @db.Text  // To be removed in frontend, kept in DB for now
  result       String?          @db.Text  // To be removed in frontend, kept in DB for now
  thumbnailUrl String
  videoUrl     String?
  likesCount   Int              @default(0)
  isVisible    Boolean          @default(false)
  order        Int              @default(0)
  // Relations
  clientId     String?
  client       Client?          @relation(fields: [clientId], references: [id])
  categoryId   String?
  category     ProjectCategory? @relation(fields: [categoryId], references: [id])
  gallery      ProjectImage[]
  likes        ProjectLike[]
  createdAt    DateTime         @default(now())
}

model ProjectImage {
  id        String  @id @default(uuid())
  url       String
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model ProjectLike {
  id         String   @id @default(uuid())
  projectId  String
  project    Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  userIpHash String
  createdAt  DateTime @default(now())

  @@unique([projectId, userIpHash])
}

model Experience {
  id              String    @id @default(uuid())
  company         String
  role            String
  startDate       DateTime
  endDate         DateTime?
  isCurrent       Boolean   @default(false)
  description     Json
  thumbnailUrl    String?
  logoUrl         String?
  backgroundColor String?   // Custom background color (e.g., "#1a1a2e")
  order           Int       @default(0)
  isVisible       Boolean   @default(true)
}

model Skill {
  id           String        @id @default(uuid())
  name         String
  shortName    String?
  iconUrl      String?
  category     SkillCategory
  description  String?       @db.Text
  gradientFrom String? // e.g., "#31A8FF"
  gradientTo   String? // e.g., "#001E36"
  gradientVia  String? // Optional middle color for 3-color gradients
  order        Int           @default(0)
}

model Service {
  id          String  @id @default(uuid())
  title       String
  description String  @db.Text
  iconUrl     String?
  order       Int     @default(0)
}

model Message {
  id        String   @id @default(uuid())
  name      String
  email     String
  content   String   @db.Text
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}

// ========================================
// NEW MODELS FOR CMS SYNCHRONIZATION
// ========================================

model HeroSlide {
  id              String  @id @default(uuid())
  title           String
  leftTitle       String
  leftSubtitle    String  @db.Text
  rightTitle      String
  rightSubtitle   String
  imageUrl        String?
  backgroundColor String? // Optional background color (e.g., "#1a1a2e")
  backgroundFrom  String? // Optional gradient start color
  backgroundTo    String? // Optional gradient end color
  order           Int     @default(0)
  isVisible       Boolean @default(true)
}

model SiteSettings {
  id             String   @id @default(uuid())
  siteName       String   @default("Haryanti")
  logoUrl        String?
  faviconUrl     String?
  primaryColor   String   @default("#FFD369")
  secondaryColor String   @default("#EEEEEE")
  footerText     String?  @db.Text
  ctaHeading     String?
  ctaDescription String?  @db.Text
  ctaButtonText  String?
  whatsappNumber String?  // e.g., "6281234567890" (without + or spaces)
  heroTemplate   String   @default("slides") // "slides" or "modern"
  updatedAt      DateTime @updatedAt
}

model ProjectCategory {
  id       String    @id @default(uuid())
  name     String    @unique
  slug     String    @unique
  order    Int       @default(0)
  projects Project[]
}
